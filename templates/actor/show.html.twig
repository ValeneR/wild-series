{% extends 'base.html.twig' %}

{% block title %}Acteur #{{ actor.name }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            {% for program in programs %}
                    <h2>{{ loop.index }} / {{ program.title }} - Id : {{ program.id }}</h2>
                    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
                    <p>{{ program.summary }}</p>
                    {# Lien vers la fiche de la série : #}
                    <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('actor_index') }}">
        Retour à la liste des acteurs
    </a>
{% endblock %}